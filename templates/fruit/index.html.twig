{% extends 'base.html.twig' %}

{% block title %}All Fruits{% endblock %}

{% block body %}
    <h1>All Fruits</h1>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Family</th>
                <th scope="col">Color</th>
            </tr>
        </thead>
        <tbody>
            {% for fruit in fruits %}
                <tr>
                    <th scope="row">{{ fruit.id }}</th>
                    <td>{{ fruit.name }}</td>
                    <td>{{ fruit.family }}</td>
                    <td>{{ fruit.genus }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(fruits) }}
{% endblock %}